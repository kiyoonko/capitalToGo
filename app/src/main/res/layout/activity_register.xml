<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.michaelwang.capitaltogo.RegisterActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/logo"
        android:layout_width="307dp"
        android:layout_height="111dp" />

    <TextView
        android:text="Please continue with your CapitalOne Credentials"
        android:textSize="14dp"
        android:gravity="center_horizontal"
        android:id="@+id/credentials"
        android:layout_width="321dp"
        android:layout_height="21dp"
        android:layout_marginTop="57dp"
        android:layout_below="@id/ivLogo"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/grey"
        android:elevation="10dp"
        android:textColor="@color/black"
        android:layout_below="@id/credentials"
        android:id="@+id/etEmail"
        android:hint="Email" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:textColorHint="@color/grey"
        android:elevation="10dp"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:layout_below="@+id/etEmail"
        android:id="@+id/etPassword"
        android:hint="Password" />

    <ImageButton
        android:src="@drawable/bcontinue"
        android:background="@null"
        android:layout_marginTop="38dp"
        android:layout_centerHorizontal="true"
        android:layout_width="229dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etPassword"
        android:id="@+id/bContinue" />

    <ImageButton
        android:src="@drawable/bcancel"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="229dp"
        android:layout_height="50dp"
        android:background="@null"
        android:id="@+id/bCancel"
        android:layout_below="@id/bContinue" />
</RelativeLayout>
