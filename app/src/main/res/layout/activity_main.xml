<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.michaelwang.capitaltogo.MainActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/logo"
        android:layout_width="307dp"
        android:layout_height="111dp" />

    <TextView
        android:layout_width="281dp"
        android:layout_height="82dp"
        android:layout_marginTop="49dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivLogo"
        android:text="Money in your hands in seconds"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:id="@+id/tvSlogan" />

    <Button
        android:text="Root Access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bRoot"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/bLogin"
        android:background="@null"
        android:src="@drawable/blogin"
        android:layout_width="229dp"
        android:layout_height="50dp"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bRegister"/>

    <ImageButton
        android:background="@null"
        android:src="@drawable/bregister"
        android:layout_width="229dp"
        android:layout_height="50dp"
        android:layout_marginTop="78dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/bRegister"
        android:layout_below="@+id/tvSlogan"/>

</RelativeLayout>
