<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home_screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.michaelwang.capitaltogo.HomeScreenActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/appbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_centerHorizontal="true"
        android:text="Select the bank account to withdraw from:"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:id="@+id/choose"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/cbg4"
        android:id="@+id/checking">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:elevation="10dp"
            android:id="@+id/tvChecking"
            android:text="hi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="18dp"
            android:elevation="10dp"
            android:layout_below="@id/tvChecking"
            android:id="@+id/tvCheckingNum"
            android:text="hi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:elevation="10dp"
            android:layout_below="@id/tvCheckingNum"
            android:id="@+id/tvCheckingAmt"
            android:text="hi"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/cbg9"
        android:id="@+id/savings">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:elevation="10dp"
            android:id="@+id/tvSavings"
            android:text="hi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="18dp"
            android:elevation="10dp"
            android:layout_below="@id/tvSavings"
            android:id="@+id/tvSavingsNum"
            android:text="hi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:elevation="10dp"
            android:layout_below="@id/tvSavingsNum"
            android:id="@+id/tvSavingsAmt"
            android:text="hi"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/cbg5"
        android:id="@+id/emergency">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:elevation="10dp"
            android:id="@+id/tvEmergency"
            android:text="hi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="18dp"
            android:elevation="10dp"
            android:layout_below="@id/tvEmergency"
            android:id="@+id/tvEmergencyNum"
            android:text="hi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:elevation="10dp"
            android:layout_below="@id/tvEmergencyNum"
            android:id="@+id/tvEmergencyAmt"
            android:text="hi"/>
    </RelativeLayout>


</LinearLayout>
