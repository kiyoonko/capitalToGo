<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request_cash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michaelwang.capitaltogo.RequestCashActivity">

    <Button
        android:text="Tap To Talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bTalk"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bTalk"
        android:layout_alignParentStart="true"
        android:id="@+id/bSubmit"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Amount to Withdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvAmount"
        android:layout_alignParentEnd="true"
        tools:text="Amount to Withdraw"
        android:textAlignment="center" />

    <Button
        android:text="+$5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bFive"
        android:layout_alignBaseline="@+id/bOne"
        android:layout_alignBottom="@+id/bOne"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="+$10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bTen"
        android:layout_alignBaseline="@+id/bFive"
        android:layout_alignBottom="@+id/bFive"
        android:layout_toEndOf="@+id/bFive" />

    <Button
        android:text="+$1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="111dp"
        android:id="@+id/bOne"
        android:layout_below="@+id/etAmount"
        android:layout_toStartOf="@+id/bFive" />

    <TextView
        android:text="$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/tvAmount"
        android:layout_toEndOf="@+id/bOne"
        android:layout_marginStart="19dp"
        android:id="@+id/tvDollar"/>

    <Button
        android:text="+$50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bFive"
        android:layout_toStartOf="@+id/bTen"
        android:id="@+id/bFifty" />

    <Button
        android:text="+$20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bFifty"
        android:layout_toStartOf="@+id/bFive"
        android:id="@+id/bTwenty" />

    <Button
        android:text="+$100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bFive"
        android:layout_toEndOf="@+id/bFive"
        android:id="@+id/bHundred" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etAmount"
        android:layout_alignBaseline="@+id/tvDollar"
        android:layout_alignBottom="@+id/tvDollar"
        android:layout_toEndOf="@+id/tvDollar"
        android:text="0" />
</RelativeLayout>
