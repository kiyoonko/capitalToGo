<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_print"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.michaelwang.capitaltogo.RegisterPrintActivity">
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/logo"
        android:layout_width="307dp"
        android:layout_height="111dp" />

    <TextView
        android:text="Last Step!\nPlease place your thumb on the\nfingerprint scanner of your device.\nPress back to cancel."
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/printPrompt"
        android:layout_width="281dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ivLogo"/>

    <ImageView
        android:id="@+id/printLock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/locks_white"
        android:layout_width="125dp"
        android:layout_height="214dp"
        android:layout_below="@id/printPrompt"
        />
    <Button
        android:text="Delete Later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/deleteLater"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>